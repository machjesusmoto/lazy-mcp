{
  "name": "@lazy-mcp/plugin",
  "version": "2.0.1",
  "description": "Claude Code plugin for lazy-loading MCP tools based on agent intelligence",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "claude-code",
    "plugin",
    "mcp",
    "lazy-loading",
    "context-management"
  ],
  "author": "Lazy MCP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/machjesusmoto/lazy-mcp.git"
  },
  "dependencies": {
    "@lazy-mcp/shared": "file:../shared"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "claudeCode": {
    "name": "lazy-mcp",
    "version": "2.0.0",
    "description": "Lazy-load MCP tools based on intelligent agent-driven analysis",
    "hooks": [
      "SessionStart",
      "PreToolUse"
    ],
    "commands": [
      {
        "name": "lazy:help",
        "description": "Show lazy-mcp help"
      },
      {
        "name": "lazy:version",
        "description": "Show version"
      },
      {
        "name": "lazy:status",
        "description": "Show current context status"
      }
    ]
  }
}
